<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5F5F5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_setSellImgInfo_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@mipmap/head" />

            <EditText
                android:id="@+id/item_setSellImgInfo_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/edittext"
                android:drawableStart="@mipmap/topic"
                android:drawablePadding="10dp"
                android:hint="@string/item_setSellImgInfo_topic"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/item_setSellImgInfo_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/edittext"
                android:drawableStart="@mipmap/money"
                android:drawablePadding="10dp"
                android:hint="@string/item_setSellImgInfo_price"
                android:inputType="number"
                android:maxLength="3"
                android:singleLine="true"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>