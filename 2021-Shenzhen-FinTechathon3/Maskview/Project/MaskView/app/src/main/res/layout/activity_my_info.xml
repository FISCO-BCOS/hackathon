<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mainView.myInfo.MyInfo">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/myInfo_finishThisActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/myInfo"
            android:textColor="#e6000000"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#DCDCDC" />

    <!--头像-->
    <LinearLayout
        android:id="@+id/layout_myInfo_headView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:background="#ffffff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:autoLink="all"
            android:gravity="center_vertical"
            android:text="@string/myInfo_headView"
            android:textColor="#89000000"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:id="@+id/iv_myInfo_headView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/head" />

        </LinearLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="24sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_right_arr" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#f7f7f7" />

    <!--昵称-->
    <LinearLayout
        android:id="@+id/layout_myInfo_nickName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:background="#ffffff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:autoLink="all"
            android:gravity="center_vertical"
            android:text="@string/myInfo_nickName"
            android:textColor="#89000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_myInfo_nickName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:src="@mipmap/head"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_right_arr" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#f7f7f7" />

    <!--性别-->
    <LinearLayout
        android:id="@+id/layout_myInfo_sex"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:background="#ffffff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:autoLink="all"
            android:gravity="center_vertical"
            android:text="@string/myInfo_sex"
            android:textColor="#89000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_myInfo_sex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:src="@mipmap/head"
            android:text="@string/myInfo_no"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_right_arr" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#f7f7f7" />

    <!--出生日期-->
    <LinearLayout
        android:id="@+id/layout_myInfo_birth"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:background="#ffffff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:autoLink="all"
            android:gravity="center_vertical"
            android:text="@string/myInfo_birth"
            android:textColor="#89000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_myInfo_birth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:src="@mipmap/head"
            android:text="@string/myInfo_no"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_right_arr" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f7f7f7" />


    <LinearLayout
        android:id="@+id/layout_myInfo_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="6dp"
        android:background="#ffffff"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:autoLink="all"
            android:gravity="center_vertical"
            android:text="@string/myInfo_phone"
            android:textColor="#89000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_myInfo_phoneNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:src="@mipmap/head"
            android:text="@string/myInfo_phoneText"
            android:textSize="15sp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="24sp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_right_arr" />


    </LinearLayout>


</LinearLayout>